[settings]
; Reload if xrandr notifies of screen change
screenchange-reload = true

[colors]
; Usual background
background = #222
; Alternative background (ex. select i3 workspace)
background-alt = #444
; Foreground text
foreground = #dfdfdf
; Icons for example
foreground-alt = #aaa
; Primary color (blue, in this case)
primary = #00a5ff
; Secundary color (not in use)
secundary = #ffffff
; Alert color
alert = #f43a53
; Transparent
empty = #00000000

[bar/Main]
; Force on a specific monitor
#monitor = ${env:MONITOR:HDMI-1}
; Set width of bar
width = 100%
; Set bar height
height = 20
; Some settings I currently don't use:
# offset-x = 1%
# offset-y = 1%
# radius = 5.0
# fixed-center = false
# border-size = 4
# border-color = #00000000
# padding-left = 0
# padding-right = 0
module-margin-left = 0
module-margin-right = 2

; Set font
font-0 = "RobotoMono Nerd Font:weight=Medium:size=10"

; Set colors for main bar
background = ${colors.background}
foreground = ${colors.foreground}

; Set line
line-size = 3
line-color = ${colors.primary}

; Modules to show
modules-left = i3
modules-center = notification xwindow
modules-right = filesystem temperature cpu memory volume wifi ethernet ethernetinteldesktop battery time

; Show systray
tray-position = right
tray-padding = 2
#tray-transparent = true
#tray-background = #000

; Allow bar to appear below windows
#override-redirect = true
#wm-restack = i3

; Define actions for the bar
scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

; Enable IPC
enable-ipc = true

[module/i3]
type = internal/i3
; Uncomment to show workspaces defined on the same output as the bar
#pin-workspaces = true

; Remove workspace numbers from name
#strip-wsnumbers

; Use partial matching on labels when assigning icons to workspaces
; Example: code;! will apply the icon to all workspaces conataining code in the label
fuzzy-match = true

; label for mode
label-mode = %mode%
label-mode-padding = 1
label-mode-background = ${colors.alert}

format = <label-state> <label-mode>

; TODO: Check for more options for label-*

; Workspaces
; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-padding = 1
label-focused-underline = ${colors.primary}
label-focused-background = ${colors.background-alt}

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-padding = 1
label-visible-underline = ${colors.primary}
label-visible-background =

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-padding = 1
label-urgent-underline = 
label-urgent-background = ${colors.alert}

; unfocused = Inactive workspaces
label-unfocused = %index%
label-unfocused-padding = 1
label-unfocused-underline = 
label-unfocused-background =


[module/xwindow]
type = internal/xwindow
format-foreground = ${colors.foreground}
#format-background = ${colors.background}
format-padding = 2

lable = %title%
label-maxlen = 30

[module/notification]
; Module for showing a notification when stuff happens
; Example: Show brightness when changed with keys
type = custom/ipc
format-background = ${colors.alert}
initial = 1
; TODO finish this module
; Hook 0: Test
hook-0 = echo
; Hook 1: Show current brightness
hook-1 = echo "Brightness: $(xbacklight | cut -d '.' -f 1)"
hook-2 = echo "Locking..."
hook-3 = date


[module/network]
type = internal/network
interval = 4.0
; Available tokens for label-conencted:
; %ifname%, %local_ip%, %essid%, %signal%, %upspeed%, %downspeed%, %linkspeed%
format-connected-underline = ${colors.primary}
format-disconnected-underline = ${colors.empty}
format-connected = <label-connected>
format-disconnected = <label-disconnected>
label-disconnected = " "


[module/wifi]
inherit = module/network
interface = wlp2s0
format-connected = <label-connected>
label-connected =  %essid% (%signal%%)
label-disconnected = 


[module/ethernet]
inherit = module/network
interface = enp4s0
label-connected =  %local_ip%
label-disconnected = 

[module/ethernetinteldesktop]
inherit = module/ethernet
interface = eno1

[module/volume]
type = internal/volume
format-volume = <ramp-volume> <label-volume>
format-muted = <label-muted>

label-volume = %percentage%%

label-muted =  --%

ramp-volume-0 = 
ramp-volume-1 = 

[module/filesystem]
type = internal/fs
interval = 10
mount-0 = /
format-mounted = <label-mounted>
label-mounted = %mountpoint% %percentage_used%%

[module/temperature]
type = internal/temperature
interval = 0.5
; Termal zone to use
; To list all the zone types, run
; for i in /sys/class/thermal/thermal_zone*; do echo "$i: $(<$i/type)"; done
thermal-zone = 0
warn-temperature = 85

format = <ramp> <label>
format-warn = <ramp> <label-warn>
label = %temperature%
label-warn = %temperature%
label-warn-foreground = ${colors.alert}
ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-foreground = ${colors.foreground-alt}

[module/cpu]
type = internal/cpu
interval = 0.5
format = <label> 
#format-prefix-foreground = ${colors.foreground-alt}
format-prefix = " "
label = %percentage%%

[module/memory]
type = internal/memory
interval = 2
format = <label> 
#format-prefix-foreground = ${colors.foreground-alt}
format-prefix = " "
label = %percentage_used%%

[module/battery]
type = internal/battery
full-at = 98
; Get list of batteries and adapters:
; $ ls -1 /sys/class/power_supply/
battery = BAT0
adaper = ADP1
poll-interval = 5
time-format = %H:%M
format-charging = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
format-full = <label-full>
format-charging-underline =  ${colors.primary}
format-discharging-underline =  ${colors.empty}
format-full-underline =  ${colors.primary}
label-charging = %percentage%%
label-discharging = %percentage%%
#label-discharging = %percentage%% (%time%@%consumption%)
label-full = 
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-framerate = 750


[module/time]
type = internal/date
interval = 1.0
; See `man date` for formatting
date = %Y-%m-%d
time = %H:%M.%S
label = %date% %time%

